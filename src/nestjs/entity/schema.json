{
  "$schema": "http://json-schema.org/schema",
  "id": "RuckenNestJsEntitySchematicsSchema",
  "title": "Rucken NestJs Entity Schematics Schema",
  "type": "object",
  "properties": {
    "fields": {
      "type": "string",
      "description": "Entity fields",
      "default": "[name]"
    },
    "name": {
      "type": "string",
      "description": "Entity singular name on ke-bab case"
    },
    "username": {
      "type": "string",
      "description": "Username"
    },
    "email": {
      "type": "string",
      "description": "Email"
    },
    "root": {
      "type": "string",
      "description": "Root folder",
      "default": "."
    },
    "app": {
      "type": "string",
      "description": "Application name in .nestcli.json"
    },
    "core": {
      "type": "string",
      "description": "Core library name in .nestcli.json"
    },
    "time": {
      "type": "number",
      "description": "Timestamp for create migration (default: current datetime)"
    }
  },
  "required": [
    "name"
  ]
}