{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@<%=name%>/core-nestjs": [
        "libs/core"
      ],
      "@<%=name%>/core-nestjs/*": [
        "libs/core/*"
      ],
      "@<%=name%>/auth-nestjs": [
        "libs/auth"
      ],
      "@<%=name%>/auth-nestjs/*": [
        "libs/auth/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}